@model CloudPrinter.Models.UserModels

@{
    ViewBag.Title = "登录";
}

<style type="text/css">
    //前端网页例子https://v3.bootcss.com/javascript/#modals #header {
        display: none;
    }

    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    .alert {
        padding-top: 100px;
        padding-bottom: 100px;
        background-image: url("/Resources/634d38441d07819d24f4e6d6ea5bff64.png");
    }

    .Login-font {
        font-size: 20px;
        color: #00ffff;
    }

    #login-body {
        padding-top: 30px;
    }
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="Login-font">
            得实仿真型打印机登录界面
        </div>
    </div>
</div>
<div class="alert">
    <form class="form-signin" action="/UserLogin/LoginIn" method="post">
        <h1 class="form-signin-heading">登录用户</h1>
            <input type="text" id="userName" title="用户名" placeholder="userName" name="userName" />
            <input type="password" id="password" titie="密码" placeholder="password" name="password" />
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe,"记住")
            </div>
        <div class="checkbox">
            @Html.ActionLink("注册用户", "Create", "UserModels")
        </div>
        <input type="submit" value="登录" />
    </form>
</div>
