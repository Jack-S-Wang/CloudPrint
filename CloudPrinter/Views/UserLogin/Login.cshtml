@model CloudPrinter.Models.UserModels

@{
    ViewBag.Title = "登录";
}

@*前端网页例子https://v3.bootcss.com/javascript/*@
<style type="text/css">
    #modals #header {
        display: none;
    }

    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="email"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    .alert {
        padding-top: 100px;
        padding-bottom: 100px;
        background-image: url("/Resources/634d38441d07819d24f4e6d6ea5bff64.png");
    }

    .Login-font {
        font-size: 20px;
        color: #00ffff;
    }

    #login-body {
        padding-top: 30px;
    }
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="Login-font">
            得实仿真型打印机登录界面
        </div>
    </div>
</div>
<div class="alert">
    <form class="form-signin" action="/UserLogin/LoginIn" method="post">
        <h1 class="form-signin-heading">登录用户</h1>
        <div class="col-md-10">
            @Html.EditorFor(model => model.userAccount, new { htmlAttributes = new { @title = "用户名", @placeholder = "userAccount", @class = "form-signin" } })
            @Html.ValidationMessageFor(model => model.userAccount, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @title = "密码", @placeholder = "password", @class = "form-signin" } })
        </div>
        <div class="col-md-10">
            @Html.ActionLink("注册用户", "Create", "UserModels")
        </div>
        <div class="col-md-10">
            <table style="width:100%;">
                <tr>
                    <td style="width:40%">
                        <input type="text" name="code" style="width:100%" />
                    </td>
                    <td style="width:40%">
                        <img id="vcodeimg" src="/UserLogin/VCode" style="width:100%;height:100%" />
                    </td>
                    <td style="width:20%">
                        <input type="submit" style="cursor: pointer; text-decoration: underline;width:100%;border:hidden" id="nextImg" value="更换">
                    </td>
                </tr>
            </table>
        </div>
        <div style="padding-left:15px">
            <input type="submit" value="登录" />
        </div>
    </form>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(function () {
        $("#nextImg").click(function () {
            debugger
            $("#vcodeimg").attr("src", "/UserLogin/VCode?time=" + (new Date).getTime());
        })
    })
</script>